<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="450.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.nob.liceo.ejerevaluacionnob.controllers.GolfistasController">

    <center>
        <TableView fx:id="tablaGolfistas" prefHeight="430.0" prefWidth="777.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="colNombre" prefWidth="120.0" text="Nombre" />
                <TableColumn fx:id="colApellido" prefWidth="120.0" text="Apellido" />
                <TableColumn fx:id="colEdad" prefWidth="60.0" text="Edad" />
                <TableColumn fx:id="colPais" prefWidth="120.0" text="País" />
                <TableColumn fx:id="colTipoPalo" prefWidth="100.0" text="Tipo Palo" />
            </columns>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </TableView>
    </center>

    <right>
        <VBox alignment="TOP_CENTER" prefHeight="406.0" prefWidth="249.0" spacing="15.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
            <padding>
                <Insets top="10.0" />
            </padding>

            <Label text="Detalles del Golfista">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Label>

            <GridPane hgap="10.0" vgap="10.0">
                <Label text="ID:" GridPane.rowIndex="0" />
                <Label fx:id="GolfistaId" text="-" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>

                <Label text="Nombre:" GridPane.rowIndex="1" />
                <TextField fx:id="tfNombre" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Apellido:" GridPane.rowIndex="2" />
                <TextField fx:id="tfApellido" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Edad:" GridPane.rowIndex="3" />
                <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <children>
                        <Slider fx:id="sliderEdad" blockIncrement="1.0" majorTickUnit="10.0" max="100.0" min="15.0" minorTickCount="1" prefWidth="130.0" showTickMarks="true" value="25.0" />
                        <Label fx:id="lblValorEdad" text="25">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>

                <Label text="País:" GridPane.rowIndex="4" />
                <ComboBox fx:id="cbPais" prefWidth="175.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="Tipo Palo:" GridPane.rowIndex="5" />
                <ComboBox fx:id="cbTipoPalo" prefWidth="175.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />


            </GridPane>

            <HBox alignment="CENTER" spacing="10.0">
                <Button fx:id="btnAnadir" onAction="#handleAnadir" text="Añadir" />
                <Button fx:id="btnModificar" onAction="#handleModificar" text="Modificar" />

                <Button fx:id="btnEliminar" onAction="#handleEliminar" style="-fx-background-color: #ff4444; -fx-text-fill: white; -fx-font-weight: bold;" text="Eliminar" />
            </HBox>

            <Button fx:id="btnLimpiar" onAction="#handleLimpiar" text="Limpiar Formulario" />
        </VBox>
    </right>
</BorderPane>
