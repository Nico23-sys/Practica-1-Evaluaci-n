<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<HBox xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="edu.nob.liceo.ejerevaluacionnob.controllers.TorneosController"
      alignment="TOP_LEFT" spacing="10.0"
      style="-fx-padding: 10;">

    <VBox spacing="10.0" HBox.hgrow="ALWAYS" alignment="TOP_LEFT">

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label text="Buscar Torneos:">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>
            <TextField fx:id="tfBuscar" promptText="Nombre, año o país..." HBox.hgrow="ALWAYS" />
        </HBox>

        <TableView fx:id="tablaTorneos" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="colNombre" prefWidth="150.0" text="Nombre del Torneo" />
                <TableColumn fx:id="colAnho" prefWidth="70.0" text="Año" />
                <TableColumn fx:id="colModalidad" prefWidth="100.0" text="Modalidad" />
                <TableColumn fx:id="colPais" prefWidth="120.0" text="País" />
                <TableColumn fx:id="colEstado" prefWidth="110.0" text="Estado" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>

    <VBox alignment="TOP_CENTER" spacing="15.0" minWidth="280.0" prefWidth="300.0">

        <Label text="Detalles del Torneo">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>

        <GridPane hgap="10.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            </rowConstraints>

            <Label text="ID:" GridPane.rowIndex="0" />
            <Label fx:id="lblTorneoId" text="-" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <font><Font name="System Bold" size="12.0" /></font>
            </Label>

            <Label text="Nombre:" GridPane.rowIndex="1" />
            <TextField fx:id="tfNombre" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Año:" GridPane.rowIndex="2" />
            <TextField fx:id="tfAnho" promptText="Ej: 2024" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Modalidad:" GridPane.rowIndex="3" />
            <ComboBox fx:id="cbModalidad" maxWidth="Infinity" promptText="Seleccione..." GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label text="País:" GridPane.rowIndex="4" />
            <ComboBox fx:id="cbPais" maxWidth="Infinity" promptText="Seleccione..." GridPane.columnIndex="1" GridPane.rowIndex="4" />
        </GridPane>

        <HBox alignment="CENTER" spacing="10.0">
            <Button fx:id="btnAnadir" onAction="#handleAnadir" text="Añadir" />
            <Button fx:id="btnModificar" onAction="#handleModificar" text="Modificar" />
            <Button fx:id="btnEliminar" onAction="#handleEliminar" style="-fx-background-color: #ff4444; -fx-text-fill: white;" text="Eliminar" />
        </HBox>

        <Button fx:id="btnLimpiar" onAction="#handleLimpiar" text="Limpiar Formulario" />
    </VBox>

</HBox>
